@page
@model FitnessTracking.Web.AddExerciseModel
@{
    ViewData["Title"] = "AddExercise";
}

<h1>Add Exercise</h1>

<form action="api/DiscreteExercise" method="post">
    <div class="form-group">
        <label>Exercise type</label> <br />
        <input type="radio" name="exerciseType" value="Discrete" checked /> Discrete<br />
        <input type="radio" name="exerciseType" value="Weighted" /> Weight<br />
        <input type="radio" name="exerciseType" value="Timed" /> Timed<br />
    </div>

    <div class="form-group">
        <label>Exercise Name</label>
        <input type="text" name="name" value="" />
    </div>

    <div class="form-group">
        <label>Sets</label>
        <input type="text" name="Sets" value="" />
    </div>

    <div class="form-group">
        <label>Your best Reps</label>
        <input type="text" name="MaxReps" value="" />
    </div>

    <div class="form-group">
        <label>How often should the difficulty increase?</label>
        <input type="text" name="LevelUpFrequency" value="" />
    </div>

    <div class="form-group">
        <label>How many reps to add on level up?</label>
        <input type="text" name="LevelUpIntensity" value="" />
    </div>


    <div class="form-group">
        <label>Date to start exercise program</label>
        <input type="date" name="StartDate" value="" />
    </div>


    <div class="form-group">
        <label>Days</label>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="monday" value="true"  id="mondayCheck" />
            <label class="form-check-label" for="mondayCheck">
                Monday
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="tuesday" value="true" id="tuesdayCheck" />
            <label class="form-check-label" for="tuesdayCheck">
                Tuesday
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="wednesday" value="true" id="wednesdayCheck" />
            <label class="form-check-label" for="wednesdayCheck">
                Wednesday
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="thursday" value="true" id="thursdayCheck" />
            <label class="form-check-label" for="thursdayCheck">
                Thursday
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="friday" value="true" id="fridayCheck" />
            <label class="form-check-label" for="fridayCheck">
                Friday
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="saturday" value="true" id="saturdayCheck" />
            <label class="form-check-label" for="saturdayCheck">
                Saturday
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="sunday" value="true" id="sundayCheck" />
            <label class="form-check-label" for="sundayCheck">
                Sunday
            </label>
        </div>
    </div>

    <button type="submit">Submit</button>
</form>